<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BanksFragment">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TBC_Bank_Currency_Rates"
        android:orientation="vertical">

        <ImageView
            android:scaleType="centerCrop"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/bankImage"/>


        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/usd_background">


            <TextView
                android:paddingTop="20dp"
                android:textColor="#EE1111"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/SellUSD"
                android:textSize="30sp"/>

            <TextView
                android:paddingBottom="20dp"
                android:layout_marginTop="5dp"
                android:textColor="#EE1111"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/BuyUSD"
                android:textSize="30sp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/usd_background">

            <TextView
                android:paddingTop="20dp"
                android:textColor="#EE1111"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/SellEUR"
                android:textSize="30dp"/>

            <TextView
                android:layout_marginTop="5dp"
                android:paddingBottom="20dp"
                android:textColor="#EE1111"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/BuyEUR"
                android:textSize="30dp"/>

        </LinearLayout>

        <TextView
            android:layout_marginTop="20dp"
            android:textSize="30dp"
            android:textColor="#DD1010"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/errorMessage"/>


    </LinearLayout>


</FrameLayout>